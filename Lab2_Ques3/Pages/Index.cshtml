@page
@model IndexModel
@{
    ViewData["Title"] = "Question 3";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Odd or Even Checker</title>
    <style>
        body {
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
            background-color: lightblue;
        }

        .content-container {
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        label, input {
            display: block;
            margin-bottom: 10px;
            text-align: center;
            width: 100%;
        }

        input {
            max-width: 250px;
            border-radius: 15px;
            background-color: #f0f0f0;
        }

        #result {
            margin-top: 20px;
            font-weight: bold;
            padding: 10px;
            border: 2px solid black;
            background-color: #f0f0f0;
            border-radius: 10px;
            width: fit-content;
            max-width: 100%;
            word-wrap: break-word;
            display: none;
        }

        button {
            color: blue;
            border-radius: 15px;
            padding: 10px 20px;
            background-color: darkgray;
            border: none;
            cursor: pointer;
        }

            button:hover {
                background-color: lightgray;
                color: white;
            }
    </style>
</head>
<body>
    <div class="content-container">
        <h1>Odd or Even Number Checker</h1>
        <label for="number">Enter a number:</label>
        <input type="text" id="number" placeholder="Number">
        <button onclick="checkNumber()">Check</button>
        <p id="result"></p>
    </div>

    <script>
        function checkNumber() {
            // user input
            const input = document.getElementById('number').value.trim();
            const resultElement = document.getElementById('result');

            // validation
            if (input === '') {
                resultElement.textContent = "Please enter a number.";
                resultElement.style.display = "block";
                return;
            }

            // convert input to number
            const number = Number(input);

            // if user input is a letter or symbol, print jabi
            if (isNaN(number)) {
                resultElement.textContent = "Jollibee";
                resultElement.style.display = "block";
                return;
            }

            // numbers exceeding 1 trillion are not valid
            if (Math.abs(number) > 1e12) {
                resultElement.textContent = "Number is too large.";
                resultElement.style.display = "block";
                return;
            }

            // checking if odd or even
            if (number % 2 === 0) {
                resultElement.textContent = `${number} -> Jolly`;
            } else {
                resultElement.textContent = `${number} -> Bee`;
            }

            // show the result
            resultElement.style.display = "block";
        }
    </script>

</body>
</html>



